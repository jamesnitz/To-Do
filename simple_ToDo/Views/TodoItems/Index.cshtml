@model IEnumerable<simple_ToDo.Models.TodoItem>

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<a type="button" class="btn btn-secondary" asp-action="Index">View all Tasks</a>
<a type="button" class="btn btn-secondary" asp-action="Index" asp-route-complete="true">View completed tasks</a>
<a type="button" class="btn btn-secondary" asp-action="Index" asp-route-progress="true">In progress</a>
<a type="button" class="btn btn-secondary" asp-action="Index" asp-route-not_Started="true">View not started tasks</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoStatusId)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TodoStatus.Title)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
